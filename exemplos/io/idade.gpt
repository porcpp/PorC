algoritmo idade;

variáveis
  idade: inteiro;
  nome: literal;
fim-variáveis

início
  imprima("Digite seu nome: ");
  nome := leia();

  imprima(nome, ", digite sua idade");
  idade := leia();

  se idade >= 18 então
    se idade < 60 então
      imprima("Adulto !");
    senão
      imprima("Ancião", "!");
    fim-se
  senão
    imprima("menor", "!");
  fim-se
fim
