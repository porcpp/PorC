algoritmo exemplo;

variáveis
  i : inteiro;
  resultado : real;
  base: real;
  exp: inteiro;
  exp2: inteiro;
fim-variáveis

início

  resultado := 1;

  para i de 1 até exp faça
    resultado := resultado * base;
  fim-para

  para i de exp até exp2  faça
    resultado := resultado * base;
  fim-para

  para i de exp até 2 faça
    resultado := resultado * base;
  fim-para

  para i de 1 até 6 faça
    resultado := resultado * base;
  fim-para

fim
